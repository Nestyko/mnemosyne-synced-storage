{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable"],
    "declarationDir": "./@types",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2019",
    "declaration": true,
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/*",
    "src/**/*.spec.ts",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx",
    "src/**/*.spec.tsx",
    "src/__mocks__/**/*"
  ]
}
